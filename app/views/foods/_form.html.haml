= form_for [@pub, @food] do |f|
  = render 'layouts/error_messages', object: @food
  = f.label :name
  = f.text_field :name
  %br
  = f.label :cost
  = f.text_field :cost
  %br
  = f.label :description
  = f.text_area :description
  %br

  %br
  - @food_categories.each do |food_category|
    = check_box_tag 'food[food_category_ids][]', food_category.id, @food.food_categories.include?(food_category), {id: "food_category_id_#{food_category.id}"}
    = label_tag "food_category_id_#{food_category.id}", food_category.name
    %br


  %br

  = f.submit
= link_to "Cancel", pub_path(@pub)